DEFINE PLUS_ONE(x) {
  x + 1
}

DEFINE MINUS_ONE(x) {
  x - 1
}

DEFINE SQUARE(x) {
  x * x
}

DEFINE CUBE(x) {
  x * SQUARE(x)
}

DEFINE FIB(x) {
  IF(x = 0, 0, IF(x = 1, 1, (FIB(x - 1) + FIB(x - 2))))
}

DEFINE FACTORIAL(x) {
  IF(x = 0, 1, (x * FACTORIAL(x - 1)))
}

DEFINE TOWERS_OF_HANOI(x) {
  IF(x = 1, 1, (2 * TOWERS_OF_HANOI(x - 1) + 1))
}

